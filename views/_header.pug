header.header 
    nav.nav.nav--tours 
        a.nav__el(href="/") All tours

    .header__logo 
        img(src="/img/logo-white.png" alt="Natours logo")
    
    nav.nav.nav--user 
        if user
            a.nav__el.nav__el--logout(href="#") Log Out
            a.nav__el(href="/account")
                img.nav__user-img(src=`${(user.photo)? `/img/users/${user.photo}`:`/img/users/default.jpg`}` alt="User photo")
                span=user.name.split(' ')[0]
        else
            a.nav__el.nav__el--cta(href="/signup") Sign up 
            a.nav__el.nav__el--cta(href="/login") Log in 